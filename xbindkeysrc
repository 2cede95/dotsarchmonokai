#"xterm"
# c:41 + m:0x4

# specify a mouse button
#"xterm"
#  control + b:2

#"xterm -geom 50x20+20+20"
#  Shift+Mod2+alt + s
#
## set directly keycode (here control+alt+mod2 + f with my keyboard)
#"xterm"
#  alt + c:0x29 + m:4 + mod2
#
## Control+Shift+a  release event starts rxvt
#"rxvt"
#  release+control+shift + a
#
## Control + mouse button 2 release event starts rxvt
#"rxvt"
#  Control + b:2 + Release
#BINDS START HERE

#terminal
"alacritty"
Mod4 + Return

#opens htop
"alacritty -e htop"
Mod4 + shift + Escape

#browser
"firefox"
Mod4 + b

#media player
"playerctl play-pause"
XF86AudioPause

"playerctl next"
XF86AudioNext

"playerctl previous"
XF86AudioPrev

#rofi
"rofi -show" 
Mod4 + r

#rofi bluetooth
"rofi-bluetooth"
Mod4 + shift + b

#vpn stuff
"nordvpn connect uk && nordvpn set killswitch enable"
Mod4 + shift + v

"nordvpn disconnect && nordvpn set killswitch disable"
Mod4 + shift + n

#pulsemixer audio control 'pkill -RTMIN+x dwmblocks' used for sending update signal to dwmblocks
"pulsemixer --change-volume +5 --max-volume 150 && pkill -RTMIN+11 dwmblocks"
XF86AudioRaiseVolume

"pulsemixer --change-volume -5 --max-volume 150 && pkill -RTMIN+11 dwmblocks"
XF86AudioLowerVolume

"pulsemixer --toggle-mute && pkill -RTMIN+11 dwmblocks"
XF86AudioMute

#Brightness control using brillo
"brillo -q -A 5"
XF86MonBrightnessUp 

"brillo -q -U 5"
XF86MonBrightnessDown

#Screenshots 
"flameshot gui"
Mod4 + F11

#slock
"slock"
Mod4 + shift + x 

